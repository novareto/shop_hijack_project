# -*- coding: utf-8 -*-

from dolmen.menu import Menu
from . import tal_template
from zope.interface import Interface
from grokcore.component import context, adapter, implementer
from cromlech.browser import ITemplate


class ContextualActionsMenu(Menu):
    context(Interface)


contextual_menutemplate = tal_template("contextualmenu.pt")

@adapter(ContextualActionsMenu, Interface)
@implementer(ITemplate)
def contextual_menu_template(context, request):
    return contextual_menutemplate
